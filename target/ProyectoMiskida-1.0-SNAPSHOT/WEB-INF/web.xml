<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ReporteController</servlet-name>
        <servlet-class>pe.edu.utp.controller.ReporteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecetaController</servlet-name>
        <servlet-class>pe.edu.utp.controller.RecetaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarController</servlet-name>
        <servlet-class>pe.edu.utp.controller.AgregarController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubirController</servlet-name>
        <servlet-class>pe.edu.utp.controller.SubirController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CalculadoraInsumoController</servlet-name>
        <servlet-class>pe.edu.utp.controller.CalculadoraInsumoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasteleroTController</servlet-name>
        <servlet-class>pe.edu.utp.controller.PasteleroTController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasteleroController</servlet-name>
        <servlet-class>pe.edu.utp.controller.PasteleroController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasteleroVController</servlet-name>
        <servlet-class>pe.edu.utp.controller.PasteleroVController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReporteController</servlet-name>
        <url-pattern>/rec</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecetaController</servlet-name>
        <url-pattern>/rc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarController</servlet-name>
        <url-pattern>/ac</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubirController</servlet-name>
        <url-pattern>/sc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CalculadoraInsumoController</servlet-name>
        <url-pattern>/CC</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasteleroTController</servlet-name>
        <url-pattern>/PTC</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasteleroController</servlet-name>
        <url-pattern>/PC</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasteleroVController</servlet-name>
        <url-pattern>/PVC</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
